                        <div class="city-feature">
                            <i class="ion-ios-location icon-small"></i>
                            <%= property.location %>
                            </div>
                        <div class="city-feature">
                            <i class="ion-ios-pricetag icon-small"></i>
                            <%= property.price %>
                        </div>
 
                    </div>
                    <% }%>
